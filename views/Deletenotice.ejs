<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">

  <title>Admin</title>
  <link rel="stylesheet" href="css/styles.css">

  <!-- bootstrap cdn -->

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<h1 class= "text-center mt-4 post-notice-title"> <u> Notices </u> </h1>

<div class="row container-fluid">
<div class="card col-lg-4 col-md-4 admin-pic" style="width: 18rem;">
  <img src="images/lost.svg" class="card-img-top" alt="adimin-head">
  <div class="admin-name">
    <h4>Tiljala High School</h4>
  </div>
  <div class="card-body nav-pills">
        <a class="nav-link" aria-current="page" href="/admin">Admin</a>
        <a class="nav-link active" href="/Deletenotice">Notice</a>
        <a class="nav-link" href="/studentResult">Students</a>
        <a class="nav-link" href="#">Log Out</a>
  </div>
</div>

<div class="post-notice-background col-lg-8 col-md-8">

<% if (!deleteNotice) { %>

  <div class="no-found-notice">
    <h1> No notice has been found! </h1>

  </div>
<% } else { %>

  <% deleteNotice.forEach(function(posts){ %>
    <div class="container-fluid">
      <div class="card notice-card">
        <div class="card-body">
          <div class="item">
            <input type="checkbox">
          <h5 class="card-title post-notice-heading"><u><b> <%= posts.noticeHeading %> </b></u></h5>
          <h6 class="card-text post-notice-body"> <%= posts.noticeBody  %> </h6>
        </div>
      </div>
    </div>
    </div>
  <% }) %>

<% } %>
<button type="submit" class="btn-primary mt-2 rounded" style="width: 6rem; height: 2.4rem;">Delete</button>
</div>
</div>
