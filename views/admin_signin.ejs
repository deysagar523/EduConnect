<body class="admin_signin_body">

  <img class="icon_logo" src="images/schl_logo.png" alt="schl_logo">

  <h1 class="login_header">
    Tiljala High School<br>
    143,Picnic Garden Road,Kolkata-700039
  </h1>


  <div class="card login_card">
    <div class="card-header">
      <h2 class="login_card_header">Log In To Your Admin Account</h2>
    </div>
    <% if(error.length>0){%>

      <div class="alert alert-danger" role="alert" >
        <%=error%>
      </div>
   <%  }  %>

    <div class="card-body row">

      <!-- <div class="col-lg-6 first_col"> -->
        <form class="admin_form" action="/admin_signin" method="POST">
          <div class="form-group">
            <label class="admin_login_label"for="exampleInputEmail1"><i class="fas fa-user"></i>   User Name</label>
            <input type="email" class="<%=(invalid.in_admin_username)?'form-control login_input invalid_input':'form-control login_input'%>" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="adminname"  value="<%=oldinput.admin_email %>" required>

          </div>
          <div class="form-group">
            <label class="admin_login_label"for="exampleInputEmail1"><i class="fas fa-lock"></i>  Password</label>
            <input type="password" class="<%=(invalid.in_admin_password)?'form-control login_input invalid_input':'form-control login_input'%>" id="exampleInputPassword" aria-describedby="emailHelp" placeholder="Enter Password" name="adminpassword" value="<%=oldinput.admin_password%>" required>

          </div>

          <div class="login_submit">
            <button type="submit" class="btn btn-lg  btn-success login_button" name="button">Log In</button>
        </form><br>
        <input type="checkbox" name="" value="" Checked>Remember me ?<br>
        <a href="">Forget Password?</a>
      <!-- </div> -->
